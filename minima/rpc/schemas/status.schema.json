{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "status",
  "description": "Returns general node status including chain height, version, uptime, and memory.",
  "type": "object",
  "properties": {
    "status": { "type": "boolean" },
    "response": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Minima version string (e.g., '1.0.46.8')"
        },
        "uptime": {
          "type": "string",
          "description": "Human-readable uptime (e.g., '0 Years 0 Months 0 Weeks 0 Days 1 Hours 5 Minutes')"
        },
        "locked": {
          "type": "boolean",
          "description": "Whether wallet keys are password-locked"
        },
        "length": {
          "type": "integer",
          "description": "Chain height (integer)"
        },
        "weight": {
          "type": "string",
          "description": "Chain weight (large number as string)"
        },
        "minima": {
          "type": "string",
          "description": "Total Minima in circulation (decimal string)"
        },
        "coins": {
          "type": "string",
          "description": "Total number of coins/UTXOs (string)"
        },
        "data": {
          "type": "string",
          "description": "Data directory path"
        },
        "memory": {
          "type": "object",
          "properties": {
            "ram": { "type": "string", "description": "RAM usage (e.g., '405.8 MB')" },
            "disk": { "type": "string", "description": "Disk usage (e.g., '1.0 GB')" },
            "files": {
              "type": ["object", "integer"],
              "description": "File size breakdown or total file count"
            }
          }
        },
        "chain": {
          "type": "object",
          "properties": {
            "block": { "type": "integer", "description": "Current block number (integer)" },
            "time": { "type": "string", "description": "Block timestamp as human-readable date string" },
            "hash": { "type": "string", "description": "Block hash (0x-prefixed)" },
            "speed": { "type": "number", "description": "Block speed (float)" },
            "difficulty": { "type": "string", "description": "Mining difficulty (0x-prefixed hex)" },
            "size": { "type": "integer", "description": "Chain tree size (integer)" },
            "length": { "type": "integer", "description": "Chain tree length (integer)" },
            "branches": { "type": "integer", "description": "Number of active branches (integer)" },
            "weight": { "type": "string", "description": "Chain weight (large number as string)" },
            "cascade": { "type": "object", "description": "Cascade chain info" }
          }
        },
        "txpow": {
          "type": "object",
          "properties": {
            "mempool": { "type": "integer", "description": "Mempool transaction count (integer)" },
            "ramdb": { "type": "integer", "description": "RAM DB entries (integer)" },
            "txpowdb": { "type": "integer", "description": "TxPoW DB entries (integer)" },
            "archivedb": { "type": "integer", "description": "Archive DB entries (integer)" }
          }
        },
        "network": {
          "type": "object",
          "properties": {
            "host": { "type": "string", "description": "Node IP address" },
            "hostset": { "type": "boolean", "description": "Whether host was manually set" },
            "port": { "type": "integer", "description": "P2P port (integer)" },
            "connecting": { "type": "integer", "description": "Connections in progress (integer)" },
            "connected": { "type": "integer", "description": "Active peer connections (integer)" },
            "rpc": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "port": { "type": "integer" }
              }
            }
          }
        }
      }
    }
  },
  "required": ["status", "response"],
  "x-agent-warnings": [
    "MIXED TYPES: length, chain.block, chain.size, chain.length, txpow.*, network.port, network.connected are INTEGERS",
    "weight, minima, coins remain STRINGS (large numbers)",
    "chain.speed is a FLOAT",
    "chain.time is a date string like 'Fri Feb 20 10:59:14 GMT 2026', NOT millis",
    "The 'devices' field does NOT exist in the status response",
    "Hex values are 0x-prefixed"
  ]
}
