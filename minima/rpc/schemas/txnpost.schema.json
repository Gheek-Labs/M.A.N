{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "txnpost",
  "description": "Post a manually built transaction. Returns the full TxPoW. Same response structure as send.",
  "type": "object",
  "properties": {
    "status": { "type": "boolean" },
    "response": {
      "type": "object",
      "description": "Full TxPoW object — same structure as send response. See send.schema.json for complete field reference.",
      "properties": {
        "txpowid": { "type": "string", "description": "Transaction ID (0x-prefixed)" },
        "isblock": { "type": "boolean" },
        "istransaction": { "type": "boolean" },
        "superblock": { "type": "integer", "description": "-1 if not a superblock (INTEGER)" },
        "size": { "type": "integer", "description": "TxPoW size in bytes (INTEGER)" },
        "burn": { "type": "integer", "description": "Burn amount (INTEGER)" },
        "header": {
          "type": "object",
          "properties": {
            "block": { "type": "string" },
            "timemilli": { "type": "string" },
            "date": { "type": "string" }
          }
        },
        "hasbody": { "type": "boolean" },
        "body": {
          "type": "object",
          "properties": {
            "txn": {
              "type": "object",
              "properties": {
                "inputs": { "type": "array" },
                "outputs": { "type": "array" },
                "state": { "type": "array" },
                "transactionid": { "type": "string", "description": "Internal tx hash — NOT the same as txpowid" }
              }
            },
            "witness": { "type": "object" },
            "burntxn": { "type": "object" },
            "txnlist": { "type": "array" }
          }
        }
      },
      "required": ["txpowid"]
    },
    "error": { "type": "string" }
  },
  "required": ["status"],
  "x-parameters": {
    "id": "Transaction ID (from txncreate). REQUIRED.",
    "auto": "true — auto-sign and select inputs (optional)",
    "burn": "Burn amount to attach (optional)"
  },
  "x-agent-warnings": [
    "See send.schema.json for the full TxPoW response structure",
    "txpowid is the external ID for explorer links",
    "transactionid is internal — do NOT use for explorer",
    "superblock, size, burn are INTEGERS; block, timemilli are STRINGS"
  ]
}
